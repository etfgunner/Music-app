<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ba.unsa.etf.rma.milan.rma15_17053.DetaljniAktiviti">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_alignParentTop="true">


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_weight="0.11">

                <TextView
                    android:layout_width="139dp"
                    android:layout_height="27dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/ZANR"
                    android:layout_gravity="center_horizontal|left"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnSpan="8" />

                <TextView
                    android:layout_width="239dp"
                    android:layout_height="34dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/ime"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnSpan="49"
                    android:layout_gravity="left|top"
                    android:textColor="#9f0000"
                    style="@android:style/TextAppearance.DeviceDefault.WindowTitle" />

                <ImageButton
                    android:layout_width="37dp"
                    android:layout_height="34dp"
                    android:id="@+id/dugmeShare"
                    android:layout_row="1"
                    android:layout_column="58"
                    android:src="@drawable/slika1"
                    android:layout_gravity="center_horizontal|right" />

            </GridLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.11">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Official web:     "
                    android:id="@+id/textView3"
                    android:textColor="#9f0000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/WEB_STR" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Biografija"
                android:id="@+id/textView4"
                android:layout_weight="0.10"
                android:textColor="#9f0000" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/_BIO"
                android:layout_weight="0.67" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="TOP 5 SONGS"
                android:id="@+id/textView2"
                android:layout_gravity="center" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.45">

                <ListView
                    tools:listitem="@android:layout/simple_list_item_1"
                    android:layout_width="match_parent"
                    android:layout_height="252dp"
                    android:id="@+id/listView3"
                    android:layout_gravity="center|bottom|left|right|top" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>